<!DOCTYPE html>

<title>Survey</title>

{% block body %}
    <h1>Survey</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ survey.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ survey.type }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ survey.title }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ survey.creationDate ? survey.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ survey.mode }}</td>
            </tr>
            <tr>
                <th>IsStrictMode</th>
                <td>{{ survey.isStrictMode ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_survey_index') }}">back to list</a>

    <a href="{{ path('app_survey_edit', {'id': survey.id}) }}">edit</a>

    {{ include('survey/_delete_form.html.twig') }}
{% endblock %}
